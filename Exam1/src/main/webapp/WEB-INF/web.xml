<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Exam1</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
   <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>com.hand.myWeb.filter.SessionFilter</filter-class>
    <init-param>
      <param-name>notLoginPage</param-name>
      <param-value>index.jsp,login.jsp,login</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.hand.myWeb.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
    <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.hand.myWeb.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowFilmsServlet</servlet-name>
    <servlet-class>com.hand.myWeb.servlet.ShowFilmsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowFilmsServlet</servlet-name>
    <url-pattern>/showFilm</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddFilmServlet</servlet-name>
    <servlet-class>com.hand.myWeb.servlet.AddFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddFilmServlet</servlet-name>
    <url-pattern>/addFilm</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DashBoradServlert</servlet-name>
    <servlet-class>com.hand.myWeb.servlet.DashBoradServlert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashBoradServlert</servlet-name>
    <url-pattern>/dashBoard</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteFilmServlet</servlet-name>
    <servlet-class>com.hand.myWeb.servlet.DeleteFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteFilmServlet</servlet-name>
    <url-pattern>/deleteFilm</url-pattern>
  </servlet-mapping>
</web-app>